<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chat_application.CreateMessageController">
<AnchorPane prefHeight="842.0" prefWidth="3158.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>

      <TextField fx:id="message" layoutX="103.0" layoutY="542.0" prefHeight="43.0" prefWidth="403.0" promptText="type your message here" style="-fx-min-width: 325; -fx-min-height: 43;" />
      <Button layoutX="516.0" layoutY="546.0" mnemonicParsing="false" onAction="#onMessage" prefHeight="38.0" prefWidth="76.0" style="-fx-min-height: 38; -fx-min-width: 65; -fx-background-color: black;" text="send" textFill="WHITE" />
         <TextArea fx:id="textarea" editable="false" layoutX="101.0" layoutY="73.0" prefHeight="448.0" prefWidth="490.0" style="-fx-min-width: 400;">
            <font>
               <Font size="18.0" />
            </font></TextArea>
         <Button layoutX="104.0" layoutY="612.0" minHeight="26.0" mnemonicParsing="false" onAction="#onLoad" prefHeight="38.0" prefWidth="262.0" style="-fx-min-height: 20; -fx-min-width: 65; -fx-background-color: black;" text="Load chat" textFill="WHITE">
            <font>
               <Font size="13.0" />
            </font>
         </Button>
         <Button layoutX="377.0" layoutY="612.0" minHeight="26.0" mnemonicParsing="false" onAction="#onClear" prefHeight="38.0" prefWidth="214.0" style="-fx-min-height: 20; -fx-min-width: 65; -fx-background-color: black;" text=" Clear chat" textFill="WHITE">
            <font>
               <Font size="13.0" />
            </font>
         </Button>
         <Button layoutX="516.0" layoutY="30.0" mnemonicParsing="false" onAction="#onExit" prefHeight="30.0" prefWidth="76.0" text="Exit" />
   </children>
</AnchorPane>
</VBox>
